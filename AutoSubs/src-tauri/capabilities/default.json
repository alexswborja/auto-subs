{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.tauri.app"
        },
        {
          "url": "http://localhost:8000/transcribe/"
        }
      ],
      "deny": [
        {
          "url": "https://private.tauri.app"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT/AutoSubs/Transcripts/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    },
    "dialog:default",
    {
      "identifier": "dialog:allow-save",
      "allow": [
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    }
  ]
}